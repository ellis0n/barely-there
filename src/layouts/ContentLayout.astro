---
import Header from "@components/Header.astro";

const { innerPage, title } = Astro.props;
---

<Header innerPage={innerPage} title={title} />
<div
	class="min-h-dvh max-h-dvh w-full fixed scroll:absolute scroll:-top-full scroll:min-h-0 transition-all scroll:pt-[17.077em] col-full grid grid-layout"
>
	<div
		class="flex flex-col items-center justify-center h-full bg-opacity-55 pt-2 sticky px-20"
	>
		<h1 class="text-1300">{title}</h1>
		<button>
			<svg
				class="w-8 h-8 mt-4"
				xmlns="http://www.w3.org/2000/svg"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
			>
				<line x1="12" y1="5" x2="12" y2="19"></line>
				<polyline points="19 12 12 19 5 12"></polyline>
			</svg>
		</button>
	</div>
</div>
<div class="invisible scroll:visible scroll:bottom-2 transition:all">
	<slot />
</div>
<script></script>
