---
const title = Astro.props.title;
---

<div
	class="min-h-dvh max-h-dvh w-full scroll:min-h-auto transition-all col-full"
	id="hero"
>
	<div
		class="flex flex-col items-center justify-center h-full bg-opacity-55 pt-2"
	>
		<h1 class="text-1300">{title}</h1>
		<a href="#content">
			<svg
				class="w-8 h-8 mt-4"
				xmlns="http://www.w3.org/2000/svg"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
			>
				<line x1="12" y1="5" x2="12" y2="19"></line>
				<polyline points="19 12 12 19 5 12"></polyline>
			</svg>
		</a>
	</div>
</div>
