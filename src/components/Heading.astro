---
interface Props {
	title: string;
	innerPage?: boolean;
}

const { title, innerPage } = Astro.props;
---

<div
	class=`${innerPage ? 'scroll' : ''} transition-all grid-col-full grid grid-layout pt-[207px] sm:pt-[246px] scroll:pt-0 scroll:mt-[88px] sm:scroll:mt-[107px] scroll:fixed w-full z-20 bg-black scroll:bg-black scroll:bg-opacity-90 backdrop-blur-lg min-h-dvh scroll:min-h-0 `
>
	<h1
		class="text-400 sm:text-900 scroll:text-400 text-white p-2
		transition-all"
	>
		<span class="text-200"> barely there // </span>
		{title}
	</h1>
</div>
