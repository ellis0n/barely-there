---
import Layout from "@layouts/Layout.astro";

interface Props {
	post: 
}

export const getStaticPaths = async () => {
	const posts = await getCollection("posts");
	return posts.map((post) => ({ 
			params: {
				slug: post.slug
			},
			props: {post},
		}))
}

const post = Astro.props.post.data;
const { Content } = await Astro.props.post.render()
---

<Layout
	title={post.title}
	layout="content"
>
	<div slot="sidebar">
		<h1>{post.title}</h1>
	</div>
	<div slot="content">
		<Content />
	</div>
</Layout>